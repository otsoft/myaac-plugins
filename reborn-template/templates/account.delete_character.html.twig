<div class="container">
	<div>
		<h1>
			Delete Character
		</h1>
		To delete a character enter the name of the character and your password.
	</div>
	<form action="{{ getLink('account/character/delete') }}" method="post">
		<input type="hidden" name="deletecharactersave" value="1"/>
		<div class="row">
			<label for="delete_name" class="col col-form-label">Character Name:</label>
			<div class="col">
				<input type="text" name="delete_name" value="" size="30" maxlength="29"/>
			</div>
		</div>
		<div class="row">
			<label for="delete_password" class="col col-form-label">Password:</label>
			<div class="col">
				<input type="password" name="delete_password" id="delete_password" size="30" maxlength="29"/>
			</div>	
		</div>	
		<div class="row">
			<div class="col">
				<button type="submit" class="btn " name="Submit" value="Submit"/>Submit</button>
				<a class="btn" href="{{ getLink('account/manage') }}" class="btn">Back</a>
			</div>
		</div>
	</form>
</div>