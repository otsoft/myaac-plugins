<table class="table table-striped" border=0 cellpadding=0 cellspacing=0>
	<tr bgcolor="{{ config.table_header_bg }}">
		<td style="font-size:18pt;font-weight:bold;paddin-top:5px;color:{{ config.table_header_textcolor }};">{{ title }}</td>
		{% if author is not empty %}
		<td style="text-align: right;color:{{ config.table_header_textcolor }};"><span style="font-weight:bold">{{ date|date(config.news_date_format) }}</span></br> <span style="font-size:8pt">Author: {{ author }}</span></td>
		{% endif %}
	</tr>
	<tr>
		<td colspan="3" style="padding-left:10px;padding-right:10px;" >{{ content|raw }}</td>
	</tr>
	{% if comments is not null %}
	<tr>
		<td colspan="3">
			<div style="text-align: right; margin-right: 10px;"><a href="{{ comments }}">Â» Comment on this news</a></div>
		</td>
	</tr>
	{% endif %}
	</table>
